<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <!-- look for spring annotations inside the controller package -->
    <mvc:annotation-driven/>
    <context:component-scan base-package="org.academiadecodigo.bootcamp"/>

    <!-- configure the view resolver -->
    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/jsp/"/>
        <property name="suffix" value=".jsp"/>
    </bean>


    <bean name="userService" class="org.academiadecodigo.bootcamp.MockUserService">
        <property name="users">
            <list>
                <bean class="org.academiadecodigo.bootcamp.User">
                    <property name="username" value="FRED"/>
                    <property name="password" value="FRED"/>
                    <property name="function" value="FRED"/>
                </bean>
                <bean class="org.academiadecodigo.bootcamp.User">
                    <property name="username" value="ALEX"/>
                    <property name="password" value="ALEX"/>
                    <property name="function" value="ALEX"/>
                </bean>
            </list>
        </property>
    </bean>


</beans>