<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="helloWithConstructor" class="org.academidadecodigo.bootcamp.HelloWorld">
        <constructor-arg name="message" value="SPRING SPRING"/>
    </bean>

    <bean id="helloWithSetter" class="org.academidadecodigo.bootcamp.HelloWorld">
        <property name="message" value="SPRING SPRING SPRING"/>
    </bean>
</beans>