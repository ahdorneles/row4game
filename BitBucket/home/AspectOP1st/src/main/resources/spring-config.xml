<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="naive" class="org.academiadecodigo.bootcamp.NaiveTest">
        <constructor-arg name="naiveBean" ref="proxy"/>
    </bean>
    <bean id="naiveBean" class="org.academiadecodigo.bootcamp.NaiveBean"/>

    <bean id="before" class="org.academiadecodigo.bootcamp.aop.AdviceBefore"/>
    <bean id="after" class="org.academiadecodigo.bootcamp.aop.AdviceAfter"/>

    <bean id="proxy" class="org.springframework.aop.framework.ProxyFactoryBean">
        <property name="target" ref="naiveBean"/>
        <property name="interceptorNames">
            <list>
                <value>before</value>
                <value>after</value>
            </list>
        </property>
    </bean>

</beans>