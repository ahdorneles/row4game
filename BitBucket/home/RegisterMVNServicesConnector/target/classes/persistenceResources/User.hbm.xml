<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.academiadecodigo.bootcamp.model.User" table="user">


        <id name="id" column="id" type="int">
            <generator class="identity"/>
        </id>

        <property name="userName" column="user_name" type="string"/>
        <property name="password" column="user_pass" type="string"/>
        <property name="email" column="email" type="string"/>

        <set name="userRoles" table="userRoles" cascade="all" >
            <key column="user_id"/>
            <many-to-many column="role_id" class="org.academiadecodigo.bootcamp.model.Role"/>
        </set>

    </class>


</hibernate-mapping>

