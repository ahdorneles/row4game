<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="controller" class="org.academiadecodigo.bootcamp.controller.Controller">
        <property name="userService" ref="userServiceImplementation"/>
        <property name="navigation" ref="navigation"/>
    </bean>

    <bean id="afterLoginController" class="org.academiadecodigo.bootcamp.controller.AfterLoginController">
        <property name="userService" ref="userServiceImplementation"/>
        <property name="navigation" ref="navigation"/>
    </bean>


</beans>