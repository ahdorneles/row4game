<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="org.academiadecodigo.mappings.many2many.User" table="user">


        <id name="id" column="id" type="int">
            <generator class="identity"/>
        </id>

        <property name="name" column="username" type="string"/>
        <property name="password" column="password" type="string"/>

        <set name="groups" table="sgroup_user" inverse="true">
            <key column="user_id"/>
            <many-to-many column="group_id" class="org.academiadecodigo.mappings.many2many.SecurityGroup"/>
        </set>

    </class>


</hibernate-mapping>