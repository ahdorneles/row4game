<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="org.academiadecodigo.mappings.many2many.SecurityGroup" table="s_group">

        <id name="id" column="id" type="int">
            <generator class="identity"/>
        </id>

        <property name="name" column="name" type="string"/>

        <set name="users" table="sgroup_user" cascade="all">
            <key column="group_id"/>
            <many-to-many class="org.academiadecodigo.mappings.many2many.User" column="user_id"/>
        </set>

    </class>


</hibernate-mapping>
