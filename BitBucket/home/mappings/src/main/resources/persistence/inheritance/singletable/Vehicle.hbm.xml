<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="org.academiadecodigo.mappings.inheritance.Vehicle" table="vehicle">

        <id name="id" column="id" type="int">
            <generator class="identity"/>
        </id>

        <discriminator column="vehicle_type" type="string"/>

        <property name="name" column="name" type="string"/>
        <property name="speed" column="speed" type="int"/>


        <subclass name="org.academiadecodigo.mappings.inheritance.Boat" discriminator-value="boat">
            <property name="engines" column="engines" type="int"/>
        </subclass>

        <subclass name="org.academiadecodigo.mappings.inheritance.Car" discriminator-value="car">
            <property name="gears" column="gears" type="int"/>
        </subclass>


    </class>



</hibernate-mapping>
