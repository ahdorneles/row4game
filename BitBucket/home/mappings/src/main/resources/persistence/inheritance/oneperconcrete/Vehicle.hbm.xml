<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="org.academiadecodigo.mappings.inheritance.Vehicle" abstract="true">

        <id name="id" column="id" type="int">
            <generator class="increment"/>
        </id>

        <property name="name" column="name" type="string"/>
        <property name="speed" column="speed" type="int"/>

        <union-subclass name="org.academiadecodigo.mappings.inheritance.Boat" table="boat">
            <property name="engines" column="engines" type="int"/>
        </union-subclass>

        <union-subclass name="org.academiadecodigo.mappings.inheritance.Car" table="car">
            <property name="gears" column="gears" type="int"/>
        </union-subclass>



    </class>


</hibernate-mapping>
